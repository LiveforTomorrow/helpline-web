{
    "name": "helpline-nextjs",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "npx webpack --config webpack.config.js && next dev",
        "build": "npx webpack --config webpack.config.js && next build",
        "start": "next start",
        "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
        "lint:ci": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}'",
        "storybook": "start-storybook -p 6006 -c .storybook -s ./public",
        "build-storybook": "build-storybook -c .storybook -s ./public",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "chromatic": "chromatic"
    },
    "dependencies": {
        "@material-ui/core": "^4.9.8",
        "@material-ui/icons": "^4.9.1",
        "@material-ui/lab": "^4.0.0-alpha.47",
        "beautiful-react-hooks": "^0.23.1",
        "embla-carousel-react": "^1.3.1",
        "faker": "^4.1.0",
        "graphql": "^14.6.0",
        "graphql-request": "^1.8.2",
        "graphql-tag": "^2.10.3",
        "lodash": "^4.17.15",
        "moment-timezone": "^0.5.28",
        "next": "9.3.2",
        "react": "16.13.1",
        "react-div-100vh": "^0.3.8",
        "react-dom": "16.13.1",
        "react-text-truncate": "^0.16.0"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@storybook/addon-actions": "^5.3.17",
        "@storybook/addon-viewport": "^5.3.17",
        "@storybook/react": "^5.3.17",
        "@testing-library/jest-dom": "^5.3.0",
        "@testing-library/react": "^10.0.2",
        "@types/faker": "^4.1.11",
        "@types/jest": "^25.1.5",
        "@types/moment-timezone": "^0.5.13",
        "@types/node": "^13.9.5",
        "@types/react": "^16.9.27",
        "@types/react-div-100vh": "^0.3.0",
        "@types/react-text-truncate": "^0.14.0",
        "@typescript-eslint/eslint-plugin": "^2.25.0",
        "@typescript-eslint/parser": "^2.26.0",
        "babel-loader": "^8.1.0",
        "babel-preset-react-app": "^9.1.2",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jest": "^23.8.2",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.19.0",
        "husky": "^4.2.3",
        "jest": "^25.2.6",
        "jsx-dom": "^6.4.14-beta.3",
        "lint-staged": "^10.0.9",
        "prettier": "^2.0.2",
        "storybook-chromatic": "^3.5.2",
        "ts-jest": "^25.3.0",
        "typescript": "^3.8.3",
        "webpack-cli": "^3.3.11",
        "zoid": "^6.0.79"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsc --noEmit && lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint --fix",
            "git add"
        ]
    }
}
